        <Label Content="Celsius =" HorizontalAlignment="Left" Margin="222,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.502,-0.195" Width="110" Height="37" FontSize="20" FontWeight="Bold"/>
